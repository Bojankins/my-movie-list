<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<main>
  <div class='container'>
    <h2>Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    
      <div class="field">
        <%= f.password_field :password_confirmation,:placeholder => "Password Confirmation", autocomplete: "off" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up" , :class => 'signup' %>
      </div>
    <% end %>
      <div class='or'>
        <span class='or-break'>Or</span>
      </div>
  </div>
</main>

